<%= semantic_form_for @product do |f| %>
  <% if @product.errors.any? %>

    <div id="error_explanation">
      <h2><%= pluralize(@product.errors.count, "error") %> prohibited this product from being saved:</h2>

      <ul>
      <% @product.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>
  <fieldset class="form-group">
    <div class="col-sm-5">
    <%= f.label :name, 'Name' %>
    <%= f.text_field :name, class: 'form-control' %>
    </div>
  </fieldset>
  <fieldset class="form-group">
    <div class="col-sm-5">
    <%= f.label :price, 'Price' %>
    <%= f.text_field :price, class: 'form-control' %>
   </div>
  </fieldset>
  <fieldset class="form-group">
    <div class="col-sm-5">
    <%= f.label :cost_price, 'Cost Price' %>
    <%= f.text_field :cost_price, class: 'form-control' %>
   </div>
  </fieldset>
  <fieldset class="form-group">
    <div class="col-sm-5">
    <%= f.label :sku, 'SKU' %>
    <%= f.text_field :sku, class: 'form-control' %>
   </div>
  </fieldset>
  <fieldset class="form-group">
    <div class="col-sm-5">
    <%= f.label :description, 'Description' %>
    <%= f.text_field :description, class: 'form-control' %> 
   </div> 
  </fieldset>
  <fieldset class="form-group">
    <div class="col-sm-5">
    <%= f.label :short_description, 'Short Description' %>
    <%= f.text_field :short_description, class: 'form-control' %>
   </div>
  </fieldset>
  <fieldset class="form-group">
    <div class="col-sm-5">
    <%= f.label :weight, 'Wight' %>
    <%= f.text_field :weight, class: 'form-control' %>
   </div>
  </fieldset>
  <fieldset class="form-group">
    <div class="col-sm-5">
    <%= f.label :active, 'Active'%> 
    <%= f.check_box :active, class: 'form-control' %>
   </div>
  </fieldset>
  <fieldset class="form-group">
    <div class="col-sm-5">
    <%= f.label :image, 'Image' %>
    <%= f.file_field :image, class: 'form-control' %>
   </div>
  </fieldset>
   <div class="col-sm-5">
    <%= f.submit 'Save', class: 'btn btn-primary'%>
   </div>

<% end %>

